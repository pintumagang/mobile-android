<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    tools:context="com.pintumagang.android_app.fragment.LowongandetailFragment">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/logo_detail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/search_view"
            android:padding="5dp"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nama_perusahaan_detail"
            android:layout_width="300dp"
            android:layout_height="29dp"
            android:layout_below="@+id/logo_detail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="a"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lihat_perusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_perusahaan_detail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Lihat Profil Perusahan >"
            android:textColor="@color/colorAccent" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="210dp"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/view_nama_lowongan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Nama Lowongan"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isi_nama_lowongan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@id/view_nama_lowongan"
            android:text="Isi Nama Lowongan" />

        <TextView
            android:id="@+id/view_lokasi_lowongan_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isi_nama_lowongan"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Lokasi Lowongan"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isi_lokasi_lowongan_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_lokasi_lowongan_detail"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="lokasi"/>

        <TextView
            android:id="@+id/view_deadline_lowongan_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isi_lokasi_lowongan_detail"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Deadline Submit"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isi_deadline_lowongan_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_deadline_lowongan_detail"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Isi deskripsi Lowongan"
            />
        <TextView
            android:id="@+id/view_deskripsi_lowongan_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isi_deadline_lowongan_detail"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Deskripsi Lowongan"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isi_deskripsi_lowongan_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_deskripsi_lowongan_detail"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Isi deskripsi Lowongan"
             />

        <LinearLayout
            android:id="@+id/btn"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isi_deskripsi_lowongan_detail"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_lamar"
                android:text="Lamar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@android:color/holo_blue_light"/>

            <Button
                android:id="@+id/btn_simpan"
                android:text="Simpan"
                android:textColor="@color/white"
                android:layout_width="130dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:background="@android:color/holo_orange_light"/>
        </LinearLayout>




        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn"
            android:layout_marginTop="30dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">

        </com.google.android.gms.ads.AdView>




    </RelativeLayout>



</RelativeLayout>
</ScrollView>